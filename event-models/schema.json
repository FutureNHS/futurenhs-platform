{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "allOf": [
    { "$ref": "#/definitions/BaseEvent" },
    {
      "oneOf": [
        { "$ref": "#/definitions/ContentViewEvent" },
        { "$ref": "#/definitions/CreateWorkspaceEvent" }
      ]
    }
  ],
  "definitions": {
    "BaseEvent": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "eventTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "subject", "eventTime"]
    },
    "ContentViewEvent": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["ContentView"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "string"
            },
            "contentId": {
              "type": "string"
            },
            "contentType": {
              "type": "string",
              "enum": ["Folder", "File"]
            },
            "workspaceId": {
              "type": "string"
            },
            "error": {
              "type": "string"
            }
          },
          "required": ["userId", "contentId", "contentType", "workspaceId"]
        }
      },
      "required": ["eventType", "dataVersion", "data"]
    },
    "CreateWorkspaceEvent": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["CreateWorkspace"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "input": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": ["title", "description"]
            },
            "output": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": ["id", "title", "description"]
            }
          },
          "required": ["input", "output"]
        }
      },
      "required": ["eventType", "dataVersion", "data"]
    }
  }
}
