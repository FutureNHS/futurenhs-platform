{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "allOf": [
    { "$ref": "#/definitions/BaseEvent" },
    {
      "oneOf": [{ "$ref": "#/definitions/ContentViewEvent" }]
    }
  ],
  "definitions": {
    "BaseEvent": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "eventTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "subject", "eventTime"]
    },
    "ContentViewEvent": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["ContentView"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "string"
            },
            "contentId": {
              "type": "string"
            },
            "contentType": {
              "type": "string",
              "enum": ["Folder", "File"]
            },
            "workspaceId": {
              "type": "string"
            },
            "error": {
              "type": "string"
            }
          },
          "required": ["userId", "contentId", "contentType", "workspaceId"]
        }
      },
      "required": ["eventType", "dataVersion", "data"]
    }
  }
}
