{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "allOf": [
    { "$ref": "#/definitions/BaseEvent" },
    {
      "oneOf": [
        { "$ref": "#/definitions/ContentViewed" },
        { "$ref": "#/definitions/FolderCreated" },
        { "$ref": "#/definitions/WorkspaceCreated" }
      ]
    }
  ],
  "definitions": {
    "BaseEvent": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "eventTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "subject", "eventTime"]
    },
    "ContentViewed": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["ContentViewed"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "string"
            },
            "contentId": {
              "type": "string"
            },
            "contentType": {
              "type": "string",
              "enum": ["Folder", "File"]
            },
            "workspaceId": {
              "type": "string"
            },
            "error": {
              "type": "string"
            }
          },
          "required": ["userId", "contentId", "contentType", "workspaceId"]
        }
      },
      "required": ["eventType", "dataVersion", "data"]
    },
    "FolderCreated": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["FolderCreated"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "folderId": {
              "type": "string"
            },
            "workspaceId": {
              "description": "The workspace that the folder is in",
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "userId": {
              "description": "The user that created the folder",
              "type": "string"
            }
          },
          "required": ["userId", "title", "workspaceId", "folderId"]
        }
      }
    },
    "WorkspaceCreated": {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "enum": ["WorkspaceCreated"]
        },
        "dataVersion": {
          "type": "string",
          "enum": ["1"]
        },
        "data": {
          "type": "object",
          "properties": {
            "workspaceId": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "userId": {
              "description": "The id of the user that created the workspace",
              "type": "string"
            }
          },
          "required": ["userId", "title", "workspaceId"]
        }
      },
      "required": ["eventType", "dataVersion", "data"]
    }
  }
}
